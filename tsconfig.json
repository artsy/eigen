{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "incremental": true,
    "lib": ["es2015"],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "pretty": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "strictFunctionTypes": true,
    "target": "es6",
    "types": ["react-native", "react", "jest"],
    "noEmit": true
  },
  "include": [
    "typings/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "scripts/changelog/**/*.ts",
    "scripts/check-flags/**/*.ts",
    "dangerfile.ts"
  ],
  "exclude": [
    "node_modules",
    "emission/Pod/Assets",
    "externals",
    "build",
    "index.ios.js",
    "index.android.js",
    "**/__mocks__",
    "src/palette/**/*.test.*" // TODO: Fix palette tests and remove this exclude rule
  ]
}
