
#!/usr/bin/env bash
set -euxo pipefail


LOCAL_BRANCH=$(git rev-parse --abbrev-ref HEAD)
export LOCAL_BRANCH

# ios
export WORKSPACE="ios/Artsy.xcworkspace"
export SCHEME="Artsy"
export DEVICE_HOST_PLAT="iOS Simulator"
IOS_CONFIG_PATH="$(dirname "$0")/../../ios-config.json"
export DEVICE_HOST_OS="$(jq -r '.ios_version' "$IOS_CONFIG_PATH")"
export DEVICE_HOST_NAME="$(jq -r '.iphone_model' "$IOS_CONFIG_PATH")"
export DERIVED_DATA_PATH="derived_data"
export CONFIGURATION="Release"
